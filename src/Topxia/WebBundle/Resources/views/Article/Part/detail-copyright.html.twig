{% if article.source or article.sourceUrl %}
<div class="well">
  {% if article.source %} 
    <p>文章来源: <strong class="mll">{{ article.source }}</strong></p>
  {% endif %}

  {% if article.sourceUrl %} 
    <p>
      原文链接: 
      <a href="{{ article.sourceUrl }}" class="mll transition" target="_blank">
        {{ article.sourceUrl }}
      </a>
    </p>
  {% endif %}
</div>
{% endif %}