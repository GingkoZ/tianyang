    <a href="javascript:;">学<br>习<br>中<br>心
      {% if recentLiveLessons %}
        <span class="dot"></span>
      {% endif %}
    </a>
  </li>
{% else %}
  <li data-id="#bar-user-center" class="bar-user">
    <a href="javascript:;">学<br>习<br>中<br>心</a>
  </li>
{% endif %}