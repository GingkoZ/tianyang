<div class="testpaper-question testpaper-question-fill" id="question{{ questions.id }}">
  <div class="testpaper-question-body">
    {% include 'CustomWebBundle:CoursewareExercise:question-stem.html.twig' %}
  </div>
  <div class="testpaper-question-footer clearfix">
    <div class="testpaper-question-determine-inputs">
      <label class="radio-inline {% if questions.answer[0]|default(0) == 1 %} active{% endif %}"><input type="radio" data-type="determine" name="{{ questions.id }}" value="1"> 正确</label>
      <label class="radio-inline {% if item.questions.answer[0]|default(1) == 0 %} active{% endif %}"><input type="radio" data-type="determine" name="{{ questions.id }}" value="0">错误</label>
    </div>
  </div>

  <div id="answer-show" class="hide red">
    <div class="testpaper-preview-answer clearfix mtl mbl">
      <div class="testpaper-question-result">
        正确答案是 <strong class="text-success">{% if questions.answer[0] == 1 %} 正确 {% else %} 错误 {% endif %}</strong class="text-success">
    </div>
    </div>
    <div class="testpaper-question-analysis well">{{ questions.analysis|default('无解析')|bbCode2Html|raw }}</div>
  </div>

</div>