<input type="hidden"  id="selectedNum" value="{{ exercises|length }}">
<div class="middle-exercise">
	{% if  lesson.type == 'video' and  lesson.mediaSource == 'smvp'%}
	  <div class="execise-vedio" style="width:100%;position:relative;height:500px;margin:10px auto;">
	    <iframe src="/smvp/video/{{ course.id }}/lesson/{{ lesson.id }}?type=admin" style="position:absolute; left:0; top:0;  border:0px; width:100%; height:100%;" scrolling="no" name="smvpVideo"></iframe>
	  </div>
	  	<button class="btn btn-primary btn-sm "  id="addExercise" data-role="hide-add-btn"  data-turl="{{ path('courseware_exercise_add', {courseId:course.id, lessonId:lesson.id }) }}">添加练习</button>
		<span class="text-muted text-sm">注：点击【添加练习题】即可在当前的视频播放时间点添加对应练习。</span>
	{% endif %}
	
  <div class="execise-questions-table">
    {% include 'CustomWebBundle:CourseExerciseManage:execise-questions-table.html.twig' %}
  </div>

</div>

